{
  "name": "librsary-service",
  "version": "1.0.0",
  "description": "Auth Service",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "check": "gts check",
    "fix": "gts fix",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "build": "NODE_ENV=production npm run fix && npm run check && npm run compile",
    "start": "./scripts/entrypoint.sh",
    "dev": "NODE_ENV=dev NODE_PATH=./src ts-node-dev ./src/drivers/rest-api/server.ts",
    "stage": "NODE_ENV=stage NODE_PATH=./src ts-node-dev ./src/drivers/rest-api/server.ts",
    "prod": "NODE_ENV=prod NODE_PATH=./src ts-node-dev ./src/drivers/rest-api/server.ts",
    "setup": "sh scripts/setup.sh",
    "run_db_migration": "sh scripts/run_db_migration.sh",
    "create-db:dev": "sh scripts/create-db.sh gtet_auth_dev",
    "drop-db:dev": "sh scripts/drop-db.sh gtet_auth_dev",
    "recreate-db": "npm run drop-db:dev && npm run create-db:dev",
    "rebuild-db": "npm run recreate-dbs && npm run typeorm:run",
    "connect-db:dev": "PGPASSWORD=gtet_auth_dev psql -h localhost -U gtet_auth_dev",
    "typeorm": "NODE_ENV=$npm_config_nodeenv ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/infra/postgres/data-source.ts",
    "typeorm:migrate": "npm run typeorm migration:generate src/infra/postgres/migrations/$npm_config_name",
    "typeorm:create": "npm run typeorm migration:create src/infra/postgres/migrations/$npm_config_name",
    "typeorm:revert": "npm run typeorm migration:revert",
    "typeorm:run": "npm run typeorm migration:run",
    "typeorm:show": "npm run typeorm migration:show"
  },
  "engines": {
    "node": ">=16.17.0",
    "npm": ">=8.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yskool-org/auth-service.git"
  },
  "author": "Prudhvi Raj",
  "license": "ISC",
  "dependencies": {
    "@fastify/compress": "^6.1.1",
    "@fastify/cors": "^8.1.0",
    "@fastify/middie": "^8.0.0",
    "@fastify/multipart": "^7.1.0",
    "@fastify/secure-session": "^5.2.0",
    "@fastify/swagger": "^8.2.1",
    "@fastify/swagger-ui": "^1.3.0",
    "@types/jest": "^29.2.0",
    "api": "^5.0.1",
    "aws-sdk": "^2.1239.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.3",
    "dotenv-flow": "^3.2.0",
    "env-schema": "^5.0.0",
    "fastify": "4.6.0",
    "fastify-redis": "^4.4.0",
    "fluent-json-schema": "^3.1.0",
    "http-status-codes": "^2.2.0",
    "jest": "^29.2.1",
    "pg": "^8.8.0",
    "pino": "^8.6.0",
    "pino-pretty": "^9.1.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.10",
    "typeorm-typedi-extensions": "^0.4.1",
    "uuid": "^9.0.0",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.0",
    "@types/connect": "^3.4.35",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.21",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.7",
    "@types/yargs": "^17.0.13",
    "cross-env": "^7.0.3",
    "fishery": "^2.2.2",
    "gts": "3.1.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.8.4"
  }
}
